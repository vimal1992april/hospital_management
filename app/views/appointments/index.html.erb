<h3>Appointments</h3>
<ul>
  <% @appointments.each do |appointment| %>
    <li>
      With <%= appointment.user.name %> - <%= appointment.date.strftime("%B %d, %Y - %I:%M %p") %>  
      (<%= link_to "Cancel", appointment_path(appointment), method: :delete, data: { confirm: "Are you sure?" } %>)
    </li>
  <% end %>
</ul>
