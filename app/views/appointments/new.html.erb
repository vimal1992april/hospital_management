<h2>New Appointment for <%= @patient.name %></h2>

<%= form_for [@patient, @appointment] do |f| %>
  <div class="mb-3">
    <%= f.label :date %>
    <%= f.datetime_select :date, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <div class="mt-3">
    <%= f.submit "Create Appointment", class: "btn btn-primary" %>
  </div>
<% end %>
